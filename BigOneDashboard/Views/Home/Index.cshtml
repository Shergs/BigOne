                                    <div class="truncate">@sound.Emote</div>
                                    <div class="truncate text-gray-300">@sound.Name</div>
                                </div>
                                <div class="flex items-center space-x-2 ml-auto">
                                    <div class="audio-player bg-gray-200 dark:bg-gray-700 px-4 ">
