                            @if (Model.SongHistory.Count > 0)
                                {
                                    foreach (SongHistoryItem songHistoryItem in Model.SongHistory)
                                    {
                                        <div class="flex items-center p-4 w-full border border-gray-600 rounded-[16px] shadow-sm dark:bg-gray-700 mb-4 justify-between" data-itemType="sound">
                                            <div class="flex items-center space-x-4 truncate" style="align-items:center;">
                                                <div class="truncate text-gray-300">@songHistoryItem.Name</div>
                                                <div class="truncate text-gray-300">discordUsername</div>
                                                <div class="truncate text-gray-300">@songHistoryItem.Timestamp.Humanize()</div>
                                            </div>
                                            <div class="flex items-center space-x-2 ml-auto">
                                                <div class="audio-player bg-gray-200 dark:bg-gray-700 px-4 ">
                                                    <div class="controls flex items-center gap-4">
                                                        <a href="@songHistoryItem.Url" target="_blank">Link</a>
                                                    </div>
                                                </div>
                                                <div class="ml-auto flex items-center space-x-2">
